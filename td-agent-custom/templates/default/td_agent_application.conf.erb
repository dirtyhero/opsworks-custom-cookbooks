<source>
  type tail
  path <%= node[:nginx][:log_dir] %>/<%= @application[:domains].first %>.access.<%= log_format_name %>.log
  pos_file /var/log/td-agent/<%= @application[:domains].first %>-access.log.pos
  tag nginx.access.<%= @application %>
   format /^(?<host>[^ ]*) [^ ]* (?<user>[^ ]*) \[(?<time>[^\]]*)\] (?<method>\S+)(?: +(?<path>[^ ]*) +\S*)? (?<code>[^ ]*) (?<size>[^ ]*) (?<referer>[^ ]*) (?<agent>[^ ]*) (?<response_time>[^ ]*)$/
   time_format %d/%b/%Y:%H:%M:%S %z
</source>